@model List<Order>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
    Layout = "~/Views/Shared/_Layout_NoSidebar.cshtml";
    string[] statusText = {
        "Không xác định", "Chưa duyệt", "Đã duyệt", "Đang giao", "Đã giao", "Đã nhận", "Đã huỷ"
    };
    // Tính số lượng theo từng trạng thái
    int count1 = Model.Count(o => o.Status == 1);
    int count2 = Model.Count(o => o.Status == 2);
    int count3 = Model.Count(o => o.Status == 3);
    int count4 = Model.Count(o => o.Status == 4);
    int count5 = Model.Count(o => o.Status == 5);
    int count6 = Model.Count(o => o.Status == 6);
    int countAll = Model.Count();
}

<!-- Toast Notification -->
@if (TempData["Message"] != null)
{
    <div id="toastMessage" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
        <div class="toast align-items-center text-white bg-custom-primary border-0 show shadow-lg" role="alert">
            <div class="d-flex">
                <div class="toast-body fw-semibold">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    @TempData["Message"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast" aria-label="Đóng"></button>
            </div>
        </div>
    </div>
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between flex-wrap">
                <div class="d-flex align-items-center mb-3 mb-sm-0">
                    <div class="bg-custom-primary bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3"
                         style="width: 60px; height: 60px;">
                        <i class="bi bi-bag-check text-white" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold text-custom-primary mb-1">Đơn hàng của tôi</h2>
                        <p class="text-muted mb-0">Quản lý và theo dõi tình trạng đơn hàng</p>
                    </div>
                </div>
                <div class="text-end">
                    <div class="badge bg-custom-primary fs-6 px-3 py-2 order-count-badge">
                        <i class="bi bi-list-check me-1"></i>
                        Tổng: @countAll đơn hàng
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Tabs -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <ul class="nav nav-tabs nav-tabs-custom border-0 mb-0" id="orderTabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active d-flex align-items-center" data-bs-toggle="tab" href="#all">
                                <i class="bi bi-list-ul me-2"></i>
                                Tất cả
                                <span class="badge bg-white text-custom-primary ms-2">@countAll</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" data-bs-toggle="tab" href="#status1">
                                <i class="bi bi-clock-history me-2"></i>
                                Chưa duyệt
                                <span class="badge bg-warning text-dark ms-2">@count1</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" data-bs-toggle="tab" href="#status2">
                                <i class="bi bi-check-circle me-2"></i>
                                Đã duyệt
                                <span class="badge bg-info ms-2">@count2</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" data-bs-toggle="tab" href="#status3">
                                <i class="bi bi-truck me-2"></i>
                                Đang giao
                                <span class="badge bg-primary ms-2">@count3</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" data-bs-toggle="tab" href="#status4">
                                <i class="bi bi-box-seam me-2"></i>
                                Đã giao
                                <span class="badge bg-success ms-2">@count4</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" data-bs-toggle="tab" href="#status5">
                                <i class="bi bi-hand-thumbs-up me-2"></i>
                                Đã nhận
                                <span class="badge bg-success ms-2">@count5</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" data-bs-toggle="tab" href="#status6">
                                <i class="bi bi-x-circle me-2"></i>
                                Đã huỷ
                                <span class="badge bg-danger ms-2">@count6</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Tab Content -->
    <div class="row">
        <div class="col-12">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="all">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-light border-0 py-3">
                            <h6 class="mb-0 text-custom-primary fw-semibold">
                                <i class="bi bi-list-check me-2"></i>
                                Tất cả đơn hàng (@countAll)
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            @Html.Partial("_OrderTable", Model)
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="status1">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-warning bg-opacity-10 border-0 py-3">
                            <h6 class="mb-0 text-warning fw-semibold">
                                <i class="bi bi-clock-history me-2"></i>
                                Đơn hàng chưa duyệt (@count1)
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            @Html.Partial("_OrderTable", Model.Where(o => o.Status == 1).ToList())
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="status2">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-info bg-opacity-10 border-0 py-3">
                            <h6 class="mb-0 text-info fw-semibold">
                                <i class="bi bi-check-circle me-2"></i>
                                Đơn hàng đã duyệt (@count2)
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            @Html.Partial("_OrderTable", Model.Where(o => o.Status == 2).ToList())
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="status3">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
                            <h6 class="mb-0 text-primary fw-semibold">
                                <i class="bi bi-truck me-2"></i>
                                Đơn hàng đang giao (@count3)
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            @Html.Partial("_OrderTable", Model.Where(o => o.Status == 3).ToList())
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="status4">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-success bg-opacity-10 border-0 py-3">
                            <h6 class="mb-0 text-success fw-semibold">
                                <i class="bi bi-box-seam me-2"></i>
                                Đơn hàng đã giao (@count4)
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            @Html.Partial("_OrderTable", Model.Where(o => o.Status == 4).ToList())
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="status5">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-success bg-opacity-10 border-0 py-3">
                            <h6 class="mb-0 text-success fw-semibold">
                                <i class="bi bi-hand-thumbs-up me-2"></i>
                                Đơn hàng đã nhận (@count5)
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            @Html.Partial("_OrderTable", Model.Where(o => o.Status == 5).ToList())
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="status6">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-danger bg-opacity-10 border-0 py-3">
                            <h6 class="mb-0 text-danger fw-semibold">
                                <i class="bi bi-x-circle me-2"></i>
                                Đơn hàng đã huỷ (@count6)
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            @Html.Partial("_OrderTable", Model.Where(o => o.Status == 6).ToList())
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom Primary Color Variables */
    :root {
        --custom-primary: #212529;
        --custom-primary-hover: #1a1e21;
        --custom-primary-light: rgba(33, 37, 41, 0.1);
        --custom-primary-shadow: rgba(33, 37, 41, 0.15);
        --gradient-primary: linear-gradient(135deg, #212529 0%, #343a40 100%);
    }

    /* Custom Primary Color Classes */
    .text-custom-primary {
        color: var(--custom-primary) !important;
    }

    .bg-custom-primary {
        background-color: var(--custom-primary) !important;
    }

    .badge.bg-custom-primary {
        background-color: var(--custom-primary) !important;
        color: white;
    }

    /* Header Styling */
    .bg-gradient {
        background: var(--gradient-primary) !important;
    }

    /* Custom Nav Tabs */
    .nav-tabs-custom {
        background-color: #f8f9fa;
        padding: 0.5rem;
        border-radius: 0.5rem; /* Apply border-radius to the container */
        display: flex; /* Use flexbox for better responsiveness */
        flex-wrap: wrap; /* Allow tabs to wrap on smaller screens */
        justify-content: center; /* Center tabs on smaller screens */
    }

        .nav-tabs-custom .nav-item {
            flex-grow: 1; /* Allow items to grow */
            flex-basis: 0; /* Initial basis for growth */
            min-width: fit-content; /* Prevent shrinking too much */
        }

        .nav-tabs-custom .nav-link {
            border: none;
            border-radius: 0.375rem;
            color: #6c757d;
            font-weight: 500;
            padding: 0.75rem 1rem;
            margin: 0.25rem; /* Adjust margin for spacing */
            transition: all 0.3s ease;
            background-color: transparent;
            text-align: center; /* Center text within tab */
            display: flex; /* Use flex for icon and text alignment */
            align-items: center;
            justify-content: center;
        }

            .nav-tabs-custom .nav-link:hover {
                background-color: var(--custom-primary-light);
                color: var(--custom-primary);
                transform: translateY(-1px);
            }

            .nav-tabs-custom .nav-link.active {
                background: var(--gradient-primary); /* Use gradient for active tab */
                color: white;
                box-shadow: 0 2px 8px var(--custom-primary-shadow);
                transform: translateY(-2px); /* Lift active tab slightly */
            }

                .nav-tabs-custom .nav-link.active .badge {
                    background-color: white !important;
                    color: var(--custom-primary) !important;
                }

    /* Card Styling */
    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.1) !important;
        }

    /* Toast Styling */
    .toast.bg-custom-primary {
        background: var(--gradient-primary) !important;
        border-radius: 0.5rem;
    }

    /* Badge Styling */
    .badge {
        font-size: 0.75rem;
        font-weight: 500;
        border-radius: 0.375rem;
        padding: 0.25rem 0.5rem;
    }

    /* Header Badge */
    .order-count-badge {
        font-size: 0.9rem !important;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        background: var(--gradient-primary) !important; /* Ensure gradient for header badge */
        box-shadow: 0 2px 8px var(--custom-primary-shadow);
    }

    /* Card Headers */
    .card-header {
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

        .card-header h6 {
            font-size: 0.95rem;
            letter-spacing: 0.025em;
        }

    /* No animations */
    .tab-pane {
        transition: opacity 0.3s ease-in-out;
    }

        .tab-pane:not(.show) {
            opacity: 0;
        }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Toast functionality
            const toastEl = document.querySelector('.toast');
            if (toastEl) {
                const toast = new bootstrap.Toast(toastEl, {
                    delay: 5000,
                    animation: true
                });
                toast.show();
            }

            // No custom animation for tab switching, Bootstrap handles fade.
            // Removed previous JS for tab animation and loading state.
        });
    </script>
}