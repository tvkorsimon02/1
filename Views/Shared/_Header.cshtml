@inject IHttpContextAccessor HttpContextAccessor
@{
    var cartCount = HttpContextAccessor.HttpContext?.Session.GetInt32("cartCount") ?? 0;
    var username = HttpContextAccessor.HttpContext?.Session.GetString("username");
    var customerName = HttpContextAccessor.HttpContext?.Session.GetString("customerName"); // Lấy tên khách hàng đã lưu trong session
    bool isLoggedIn = !string.IsNullOrEmpty(username);
    bool isAdmin = isLoggedIn && username == "admin";
}

<nav class="navbar navbar-expand-lg navbar-custom shadow-lg py-3">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="~/imgs/logo.png" alt="TECHGEAR" height="55" class="me-2 rounded-circle border border-white p-1 brand-logo-glow" />
            <span class="text-white fw-bolder text-uppercase fs-3 brand-text">TECHGEAR</span>
        </a>
        <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
            <form class="d-flex flex-grow-1 mx-lg-5 my-3 my-lg-0 search-form" method="get" action="/Search">
                <div class="input-group input-group-custom">
                    <input name="query" class="form-control form-control-lg border-0 search-input" type="search" placeholder="Tìm kiếm sản phẩm..." aria-label="Search" />
                    <button class="btn btn-search-custom" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
            <ul class="navbar-nav d-flex flex-row flex-wrap gap-3 ms-auto align-items-center justify-content-center justify-content-lg-end">
                @if (isLoggedIn)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center nav-link-custom"
                           href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-2"></i>
                            <small class="fw-bold">@(isAdmin ? "Admin" : customerName)</small>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-custom" aria-labelledby="navbarDropdownUser">
                            @if (!isAdmin)
                            {
                                <li>
                                    <a class="dropdown-item dropdown-item-custom" href="/Orders/MyOrders">
                                        <i class="bi bi-receipt me-2"></i> Đơn hàng của tôi
                                    </a>
                                </li>
                            }
                            <li>
                                <a class="dropdown-item dropdown-item-custom" href="/Account/Profile">
                                    <i class="bi bi-person-lines-fill me-2"></i> Hồ sơ của tôi
                                </a>
                            </li>
                            <li><hr class="dropdown-divider dropdown-divider-custom" /></li>
                            <li>
                                <a class="dropdown-item dropdown-item-custom text-danger" href="/Account/Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </li>
                    @* Nút chỉ admin thấy *@
                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a href="/Admin" class="nav-link nav-link-custom bg-custom-primary text-white fw-bold admin-button">
                                <i class="bi bi-tools me-2"></i> Chỉnh sửa (admin)
                            </a>
                        </li>
                    }
                }
                else
                {
                    <li class="nav-item">
                        <a href="/Account/Login" class="nav-link nav-link-custom">
                            <i class="bi bi-person-circle me-2"></i>
                            <small class="fw-bold">Đăng nhập / Đăng ký</small>
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a href="/Cart" class="nav-link nav-link-custom position-relative">
                        <i class="bi bi-cart3 me-2"></i> Giỏ hàng
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge">
                            @cartCount
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<style>
    /* Custom Primary Color Variables */
    :root {
        --custom-primary: #212529;
        --custom-primary-hover: #1a1e21;
        --custom-primary-light: rgba(33, 37, 41, 0.1);
        --custom-primary-shadow: rgba(33, 37, 41, 0.25);
        --gradient-primary: linear-gradient(135deg, #212529 0%, #343a40 100%);
    }

    /* Navbar Custom */
    .navbar-custom {
        background: var(--gradient-primary);
        box-shadow: 0 5px 20px var(--custom-primary-shadow) !important;
    }

    /* Brand Logo and Text */
    .brand-logo-glow {
        transition: all 0.3s ease;
    }

    .navbar-brand:hover .brand-logo-glow {
        transform: scale(1.05);
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
    }

    .brand-text {
        text-shadow: 0 2px 10px rgba(0,0,0,0.3);
    }

    /* Navbar Toggler */
    .custom-toggler {
        border: 1px solid rgba(255, 255, 255, 0.5);
        transition: all 0.3s ease;
    }

        .custom-toggler:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

    .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }

    /* Search Form */
    .search-form {
        max-width: 500px; /* Limit search bar width */
    }

    .input-group-custom .search-input {
        border-radius: 0.5rem 0 0 0.5rem;
        background-color: rgba(255, 255, 255, 0.9);
        color: var(--custom-primary);
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .input-group-custom .search-input::placeholder {
            color: #6c757d;
            opacity: 0.8;
        }

        .input-group-custom .search-input:focus {
            box-shadow: 0 0 0 0.25rem var(--custom-primary-light);
            background-color: white;
        }

    .btn-search-custom {
        background-color: var(--custom-primary);
        border-color: var(--custom-primary);
        color: white;
        border-radius: 0 0.5rem 0.5rem 0;
        transition: all 0.3s ease;
    }

        .btn-search-custom:hover {
            background-color: var(--custom-primary-hover);
            border-color: var(--custom-primary-hover);
            transform: translateY(-1px);
        }

    /* Nav Links Custom */
    .nav-link-custom {
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 0.5rem;
        padding: 0.6rem 1rem !important;
        color: white !important;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .nav-link-custom:hover {
            background-color: rgba(255, 255, 255, 0.1);
            border-color: white;
            transform: translateY(-2px);
        }

    /* Dropdown Menu Custom */
    .dropdown-menu-custom {
        background-color: white;
        border: 1px solid rgba(0,0,0,0.1);
        border-radius: 0.5rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        overflow: hidden; /* Ensures rounded corners apply to content */
    }

    .dropdown-item-custom {
        color: var(--custom-primary);
        font-weight: 500;
        transition: all 0.2s ease;
    }

        .dropdown-item-custom:hover {
            background-color: var(--custom-primary-light);
            color: var(--custom-primary-hover);
        }

    .dropdown-divider-custom {
        border-top-color: #e9ecef;
    }

    /* Admin Button */
    .admin-button {
        background: var(--gradient-primary) !important;
        border: none !important;
        box-shadow: 0 4px 12px var(--custom-primary-shadow);
    }

        .admin-button:hover {
            background: linear-gradient(135deg, var(--custom-primary-hover) 0%, #16191d 100%) !important;
            transform: translateY(-2px);
            box-shadow: 0 6px 18px var(--custom-primary-shadow);
        }

    /* Cart Badge */
    .cart-badge {
        font-size: 0.75rem;
        padding: 0.3em 0.6em;
        border-radius: 1rem;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(220, 53, 69, 0.4);
    }
</style>