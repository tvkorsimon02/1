@{
    Layout = "~/Views/Shared/_Layout_NoSidebar.cshtml";
}

<!-- Toast Notification -->
@if (TempData["Message"] != null)
{
    <div id="toastMessage" class="toast-container position-fixed bottom-0 start-0 p-3" style="z-index: 1055;">
        <div class="toast align-items-center text-white bg-custom-primary border-0 show shadow-lg" role="alert">
            <div class="d-flex">
                <div class="toast-body fw-semibold">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @TempData["Message"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast" aria-label="Đóng"></button>
            </div>
        </div>
    </div>
}

<div class="container py-5 admin-dashboard-container">
    <div class="row justify-content-center mb-5">
        <div class="col-12 col-md-10 col-lg-8 text-center">
            <div class="admin-header-box p-4 p-md-5 rounded-3 shadow-lg">
                <div class="header-icon-wrapper mb-3">
                    <i class="bi bi-tools text-white"></i>
                </div>
                <h1 class="admin-title mb-2">TRANG QUẢN TRỊ TECHGEAR</h1>
                <p class="admin-subtitle mb-0">Chào mừng bạn, admin! Quản lý hệ thống của bạn một cách hiệu quả.</p>
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 justify-content-center">
        <div class="col">
            <a href="/Admin/Category" class="card card-admin-item h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper icon-wrapper-primary mb-3">
                        <i class="bi bi-folder2-open"></i>
                    </div>
                    <h5 class="card-title-admin">Danh mục sản phẩm</h5>
                    <p class="card-text-admin">Quản lý các loại danh mục sản phẩm.</p>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="/Admin/Product" class="card card-admin-item h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper icon-wrapper-success mb-3">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <h5 class="card-title-admin">Sản phẩm</h5>
                    <p class="card-text-admin">Thêm, sửa, xóa và quản lý sản phẩm.</p>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="/Admin/Customers" class="card card-admin-item h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper icon-wrapper-warning mb-3">
                        <i class="bi bi-people"></i>
                    </div>
                    <h5 class="card-title-admin">Khách hàng</h5>
                    <p class="card-text-admin">Quản lý thông tin và tài khoản khách hàng.</p>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="/Admin/Stats" class="card card-admin-item h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper icon-wrapper-danger mb-3">
                        <i class="bi bi-bar-chart-line"></i>
                    </div>
                    <h5 class="card-title-admin">Thống kê đơn hàng</h5>
                    <p class="card-text-admin">Xem báo cáo và thống kê về đơn hàng.</p>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="/Admin/Orders" class="card card-admin-item h-100 position-relative">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper icon-wrapper-info mb-3">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <h5 class="card-title-admin">Đơn hàng</h5>
                    <p class="card-text-admin">Duyệt và quản lý các đơn đặt hàng.</p>
                    @if (ViewBag.OrderCount != null && (int)ViewBag.OrderCount > 0)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger admin-badge-count">
                            @ViewBag.OrderCount
                            <span class="visually-hidden">số đơn hàng</span>
                        </span>
                    }
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    /* Custom Variables */
    :root {
        --custom-primary: #212529;
        --custom-primary-hover: #1a1e21;
        --custom-primary-light: rgba(33, 37, 41, 0.1);
        --custom-primary-shadow: rgba(33, 37, 41, 0.25);
        --gradient-primary: linear-gradient(135deg, #212529 0%, #343a40 100%);
    }

    /* General Styling */
    .admin-dashboard-container {
        min-height: 70vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    /* Header Box */
    .admin-header-box {
        background: var(--gradient-primary);
        color: white;
        box-shadow: 0 15px 45px var(--custom-primary-shadow);
        position: relative;
        overflow: hidden;
    }

        .admin-header-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 30% 70%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 70% 30%, rgba(255,255,255,0.1) 0%, transparent 50%);
            z-index: 0;
        }

        .admin-header-box > * {
            position: relative;
            z-index: 1;
        }

    .header-icon-wrapper {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2.5rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .admin-title {
        font-size: 2.5rem;
        font-weight: 900;
        letter-spacing: 1px;
        text-shadow: 0 4px 20px rgba(0,0,0,0.5);
        background: linear-gradient(45deg, #fff, #f8f9fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .admin-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        text-shadow: 0 2px 10px rgba(0,0,0,0.3);
    }

    /* Card Admin Item */
    .card-admin-item {
        border: 1px solid #e9ecef;
        border-radius: 15px;
        text-decoration: none;
        color: inherit;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

        .card-admin-item:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
            border-color: var(--custom-primary);
        }

        .card-admin-item .card-body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

    .icon-wrapper {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.2rem;
        color: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .card-admin-item:hover .icon-wrapper {
        transform: scale(1.1);
    }

    .icon-wrapper-primary {
        background: var(--gradient-primary);
    }

    .icon-wrapper-success {
        background: linear-gradient(135deg, #28a745 0%, #218838 100%);
    }

    .icon-wrapper-warning {
        background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
    }

    .icon-wrapper-danger {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
    }

    .icon-wrapper-info {
        background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
    }

    .card-title-admin {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--custom-primary);
        margin-bottom: 0.5rem;
    }

    .card-text-admin {
        font-size: 0.9rem;
        color: #6c757d;
        text-align: center;
    }

    /* Order Count Badge */
    .admin-badge-count {
        font-size: 0.8rem;
        padding: 0.4em 0.7em;
        border-radius: 1rem;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(220, 53, 69, 0.4);
    }

    /* Toast Styling */
    .toast.bg-custom-primary {
        background: var(--gradient-primary) !important;
        border-radius: 10px;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toastEl = document.querySelector('.toast');
            if (toastEl) {
                const toast = new bootstrap.Toast(toastEl, { delay: 5000 });
                toast.show();
            }
        });
    </script>
}