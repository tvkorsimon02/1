@model List<Cart>
@{
    Layout = "~/Views/Shared/_Layout_NoSidebar.cshtml";
    // CHỈ tính tổng cho sản phẩm còn Active
    decimal subtotal = Model
        .Where(item => item.ProductNav?.Active ?? false)
        .Sum(item => item.Quantity * (item.ProductNav?.Price ?? 0));
}

<!-- Toast Notification -->
@if (TempData["Message"] != null)
{
    <div id="toastMessage" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
        <div class="toast align-items-center text-white bg-custom-primary border-0 show shadow-lg" role="alert">
            <div class="d-flex">
                <div class="toast-body fw-semibold">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    @TempData["Message"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast" aria-label="Đóng"></button>
            </div>
        </div>
    </div>
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between flex-wrap">
                <div class="d-flex align-items-center mb-3 mb-sm-0">
                    <div class="bg-custom-primary bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3"
                         style="width: 60px; height: 60px;">
                        <i class="bi bi-cart3 text-white" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold text-custom-primary mb-1">Giỏ hàng của tôi</h2>
                        <p class="text-muted mb-0">Kiểm tra và thanh toán các sản phẩm đã chọn</p>
                    </div>
                </div>
                <div class="text-end">
                    <div class="badge bg-custom-primary fs-6 px-3 py-2 cart-summary-badge">
                        Tổng cộng: <span id="headerSubtotal">@string.Format("{0:N0}", subtotal)</span> VND
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cart Content -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 cart-card">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0 text-custom-primary fw-semibold">
                        <i class="bi bi-basket me-2"></i>
                        Sản phẩm trong giỏ hàng
                    </h6>
                </div>
                <div class="card-body p-0">
                    <form method="post" id="cartForm">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0 cart-table">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-center" style="width:50px;">
                                            <input type="checkbox" id="checkAll" class="form-check-input" />
                                        </th>
                                        <th>Sản phẩm</th>
                                        <th class="text-center" style="width:120px;">Số lượng</th>
                                        <th class="text-end" style="width:150px;">Giá</th>
                                        <th class="text-end" style="width:150px;">Tổng</th>
                                        <th class="text-center" style="width:60px;">Xoá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        var i = 0;
                                        foreach (var item in Model)
                                        {
                                            var inactive = !(item.ProductNav?.Active ?? false);
                                            <tr data-row data-inactive="@inactive" class="@(inactive ? "inactive-row" : "")">
                                                <td class="text-center">
                                                    <input type="checkbox" name="SelectedIds" value="@item.Id"
                                                           class="form-check-input" @(inactive ? "disabled" : "") />
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="@(string.IsNullOrEmpty(item.ProductNav?.ImageUrl)
                                                                ? "/placeholder.svg?height=60&width=60"
                                                                : Url.Content("~/uploads/" + item.ProductNav!.ImageUrl))"
                                                             alt="@item.ProductNav?.Name" class="rounded me-3"
                                                             style="width:60px;height:60px;object-fit:cover;" />
                                                        <div>
                                                            <div class="fw-semibold">@item.ProductNav?.Name</div>
                                                            @if (inactive)
                                                            {
                                                                <div class="small text-danger d-flex align-items-center gap-2">
                                                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle">
                                                                        Ngừng bán
                                                                    </span>
                                                                    <span>Sản phẩm hiện tại chưa thể thanh toán</span>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <input type="hidden" name="CartItems[@i].Id" value="@item.Id" />
                                                    <input type="number"
                                                           name="CartItems[@i].Quantity"
                                                           value="@item.Quantity"
                                                           min="1"
                                                           class="form-control form-control-sm text-center quantity-input"
                                                    @(inactive ? "disabled" : "") />
                                                </td>
                                                <td class="text-end unit-price" data-price="@(@item.ProductNav?.Price ?? 0)">
                                                    @string.Format("{0:N0}", (item.ProductNav?.Price ?? 0)) VND
                                                </td>
                                                <td class="text-end fw-bold text-custom-primary line-total">
                                                    @string.Format("{0:N0}", item.Quantity * (item.ProductNav?.Price ?? 0)) VND
                                                </td>
                                                <td class="text-center">
                                                    <button type="submit"
                                                            formaction="/Cart/DeleteSelected"
                                                            formmethod="post"
                                                            name="SelectedIds"
                                                            value="@item.Id"
                                                            class="btn btn-icon-trash"
                                                            title="Xoá sản phẩm này">
                                                        <i class="bi bi-trash3"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center text-muted py-4">
                                                Giỏ hàng của bạn đang trống.
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Shipping info (đặt ngoài bảng cho đúng HTML) -->
                        <div class="border-top p-3 bg-white">
                            <h6 class="mb-3 text-custom-primary">
                                <i class="bi bi-truck me-2"></i> Thông tin nhận hàng
                            </h6>

                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Người nhận <span class="text-danger">*</span></label>
                                    <input name="receiverName" class="form-control" required />   <!-- THÊM -->
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                                    <input name="receiverPhone" value="@ViewBag.DefaultPhone" class="form-control" required />
                                </div>
                                <div class="col-md-8">
                                    <label class="form-label">Địa chỉ nhận hàng <span class="text-danger">*</span></label>
                                    <input name="shippingAddress" value="@ViewBag.DefaultAddress" class="form-control" required />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Ghi chú (tuỳ chọn)</label>
                                    <textarea name="note" class="form-control" rows="2"></textarea>
                                </div>
                            </div>
                        </div>


                        <div class="d-flex justify-content-between align-items-center py-3 bg-light border-top">
                            <div>
                                <button type="submit" formaction="/Cart/Update" formmethod="post" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-repeat me-2"></i> Cập nhật số lượng
                                </button>
                            </div>
                            <div class="d-flex align-items-center gap-3">
                                <div class="badge bg-custom-primary fs-6 px-3 py-2 cart-summary-badge">
                                    Tổng cộng: <span id="subtotalSpan">@string.Format("{0:N0}", subtotal)</span> VND
                                </div>
                                <button type="submit" formaction="/Cart/Checkout" formmethod="post" class="btn btn-custom-primary btn-lg">
                                    <i class="bi bi-credit-card-2-front me-2"></i> Đặt hàng
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-icon-trash {
        background: transparent;
        border: none;
        color: #dc3545;
        font-size: 1.1rem;
        padding: .25rem .5rem;
        border-radius: .375rem;
        transition: all 0.2s ease;
    }

        .btn-icon-trash:hover {
            background: rgba(220,53,69,.1);
            color: #b02a37;
            transform: translateY(-1px);
        }

    /* Inactive row styling */
    .inactive-row {
        opacity: 0.6;
        filter: grayscale(.6);
    }

        .inactive-row .quantity-input {
            pointer-events: none;
            background-color: #f1f3f5;
        }

    /* Custom Primary Color Variables */
    :root {
        --custom-primary: #212529;
        --custom-primary-hover: #1a1e21;
        --custom-primary-light: rgba(33, 37, 41, 0.1);
        --custom-primary-shadow: rgba(33, 37, 41, 0.15);
        --gradient-primary: linear-gradient(135deg, #212529 0%, #343a40 100%);
    }

    .text-custom-primary {
        color: var(--custom-primary) !important;
    }

    .bg-custom-primary {
        background-color: var(--custom-primary) !important;
    }

    .badge.bg-custom-primary {
        background-color: var(--custom-primary) !important;
        color: white;
    }

    .bg-gradient {
        background: var(--gradient-primary) !important;
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .cart-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 20px rgba(0,0,0,0.1) !important;
    }

    .toast.bg-custom-primary {
        background: var(--gradient-primary) !important;
        border-radius: 0.5rem;
    }

    .badge {
        font-size: 0.75rem;
        font-weight: 500;
        border-radius: 0.375rem;
        padding: 0.25rem 0.5rem;
    }

    .cart-summary-badge {
        font-size: 0.9rem !important;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        background: var(--gradient-primary) !important;
        box-shadow: 0 2px 8px var(--custom-primary-shadow);
    }

    .cart-table thead th {
        font-weight: 600;
        color: var(--custom-primary);
        border-bottom: 2px solid var(--custom-primary-light);
    }

    .cart-table tbody td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }

    .cart-table tbody tr:last-child td {
        border-bottom: none;
    }

    .cart-table .quantity-input {
        max-width: 80px;
        margin: auto;
        border-color: #dee2e6;
    }

    .btn-custom-primary {
        background: var(--gradient-primary);
        border: none;
        color: white;
        transition: all 0.3s ease;
        font-weight: 500;
        box-shadow: 0 4px 12px var(--custom-primary-shadow);
    }

        .btn-custom-primary:hover {
            background: linear-gradient(135deg, var(--custom-primary-hover) 0%, #16191d 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 18px var(--custom-primary-shadow);
            color: white;
        }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Toast
            const toastEl = document.querySelector('.toast');
            if (toastEl) {
                const toast = new bootstrap.Toast(toastEl, { delay: 5000, animation: true });
                toast.show();
            }

            // Check All: chỉ check checkbox KHÔNG disabled
            document.getElementById("checkAll")?.addEventListener("change", function () {
                const isChecked = this.checked;
                document.querySelectorAll("input[name='SelectedIds']:not(:disabled)")
                    .forEach(c => c.checked = isChecked);
            });

            // Recalc lần đầu
            recalc();
        });

        // Cập nhật tổng từng dòng + subtotal (bỏ qua hàng inactive)
        const fmt = new Intl.NumberFormat('vi-VN');
        function recalc() {
            let subtotal = 0;
            document.querySelectorAll('tr[data-row]').forEach(row => {
                const isInactive = row.getAttribute('data-inactive') === 'True' || row.getAttribute('data-inactive') === 'true';
                const qtyInput = row.querySelector('.quantity-input');
                const priceEl = row.querySelector('.unit-price');
                const lineTotalEl = row.querySelector('.line-total');

                const price = Number(priceEl?.dataset.price || 0);
                const qty = Math.max(1, Number(qtyInput?.value || 1));
                const line = price * qty;

                lineTotalEl.textContent = fmt.format(line) + ' VND';
                if (!isInactive) subtotal += line;
            });

            const subtotalSpan = document.getElementById('subtotalSpan');
            if (subtotalSpan) subtotalSpan.textContent = fmt.format(subtotal);

            const headerSubtotal = document.getElementById('headerSubtotal');
            if (headerSubtotal) headerSubtotal.textContent = fmt.format(subtotal);
        }
        document.querySelectorAll('.quantity-input').forEach(inp => {
            inp.addEventListener('input', recalc);
            inp.addEventListener('change', recalc);
        });
    </script>
}
